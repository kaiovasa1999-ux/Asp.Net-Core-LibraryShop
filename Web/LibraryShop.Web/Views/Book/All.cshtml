@model LibraryShop.Web.ViewModels.Book.AllBooksListingAndSortingViewModel

<form method="get">
    <div class="form-group col-md-4">
        <label asp-for="Gener">Sort by Gener:</label>
        <select asp-for="Gener" class="form-control">
            <option value="">All</option>
            @foreach (var category in Model.Geners)
            {
                <option value="@category">@category</option>
            }
        </select>
    </div>
    <div class="form-group col-md-4">
        <label asp-for="Title">Title</label>
        <select asp-for="Title" class="form-control">
            <option value="">All</option>
            @foreach (var brand in Model.Titles)
            {
                <option value="@brand">@brand</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="SearchTherm">Search by text:</label>
        <input asp-for="SearchTherm">
    </div>
    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="Sorting">Sorting</label>
            <select asp-for="Sorting" class="form-control">
                <option value="">
                    All
                </option>
                <option value="0">Price</option>
                <option value="1">Pages</option>
                <option value="2">Author Name</option>
                <option value="3">Year Created</option>
            </select>
        </div>
    </div>
</form>

@if (!Model.Books.Any()) 
{
    <h2 class="text-center text-danger">There are't any avaiable books in our library:</h2>
}

<div class="row form-group">
    @foreach (var book in Model.Books)
    {
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="@book.ImageUrl" alt="@book.Title @book.Author">
            <div class="card-body">
                <h5 class="card-title">Card title</h5>
                <p class="card-text">@book.Descrption</p>
                <a asp-action="AboutBook" asp-route-id="@book.Id" class="btn btn-primary">About</a>
            </div>
        </div>
    }
</div>

<nav aria-label="Page navigation example" class="offset-4">
    <ul class="pagination">
        @if (Model.HasPrevPage)
        {
            <li class="page-item"><a class="page-link" asp-action="All" asp-route-id="@Model.PrevPage">Previous</a></li>
        }
        else
        {
            <li class="page-item disabled"><a class="page-link" asp-action="All" asp-route-id="@Model.PrevPage">Previous</a></li>
        }

        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        @if (Model.HasPrevPage)
        {
            <li class="page-item"><a class="page-link" asp-action="All" asp-route-id="@Model.NextPage">Next</a></li>
        }
        else
        {
            <li class="page-item disabled"><a class="page-link" asp-action="All" asp-route-id="@Model.NextPage">Next</a></li>
        }
    </ul>
</nav>