@model LibraryShop.Web.ViewModels.Book.AllBooksListingAndSortingViewModel


<form method="get">
    <div class="form-group col-md-4">
        <label asp-for="Gener">Sort by Gener:</label>
        <select asp-for="Gener" class="form-control">
            <option value="">All</option>
            @foreach (var category in Model.Geners)
            {
                <option value="@category">@category</option>
            }
        </select>
    </div>
    <div class="form-group col-md-4">
        <label asp-for="Title">Title</label>
        <select asp-for="Title" class="form-control">
            <option value="">All</option>
            @foreach (var brand in Model.Titles)
            {
                <option value="@brand">@brand</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="SearchTherm">Search by text:</label>
        <input asp-for="SearchTherm">
    </div>
    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="Sorting">Sorting</label>
            <select asp-for="Sorting" class="form-control">
                <option value="">
                    All
                </option>
                <option value="1">Price</option>
                <option value="2">Pages</option>
                <option value="3">Author Name</option>
                <option value="4">Year Created</option>
            </select>
        </div>
    </div>
</form>

@if (!Model.Books.Any())
{
    <h2 class="text-center text-danger">There are't any avaiable books in our library by this criteria!</h2>
}

<div class="row form-group">
    @foreach (var book in Model.Books)
    {
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="@book.ImageUrl" alt="@book.Title @book.Author">
            <div class="card-body">
                <p class="card-text">@book.Descrption</p>
                <a asp-action="AboutBook" asp-route-id="@book.Id" class="btn btn-primary">About</a>
                <a asp-action="EditBook" asp-route-id="@book.Id" class="btn btn-warning">Edit</a>
                <a asp-action="DeleteBook" asp-route-id="@book.Id" class="btn btn-warning">Delete</a>
                <a asp-controller="Basket" asp-action="AddToBasket" asp-route-id="@book.Id" class="btn btn-success">Buy</a>
            </div>
        </div>
    }
</div>

<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        <li class="page-item disabled">
            <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
               asp-controller="Book"
               asp-action="All"
               asp-route-currentPage="@Model.CurrentPage - 1"
               asp-route-brand="@Model.Title"
               asp-route-searchTerm="@Model.SearchTherm"
               asp-route-sorting="@((int)Model.Sorting)">Prev</a>
        </li>
        <li class="offset-12 page-item">
            <a class="btn btn-primary @(Model.CurrentPage == Model.TotalPages ? "disabled" : string.Empty)"
               asp-controller="Book"
               asp-action="All"
               asp-route-currentPage="@(Model.CurrentPage + 1)"
               asp-route-brand="@Model.Title"
               asp-route-searchTerm="@Model.SearchTherm"
               asp-route-sorting="@((int)Model.Sorting)">Next</a>
        </li>
    </ul>
</nav>




<div class="offset-3 container">
    <div class="row">
        <div class="form-group">
            <a class="btn btn-success " asp-area="" asp-controller="Basket" asp-action="MyBasket">Basket</a>
        </div>
    </div>
</div>
