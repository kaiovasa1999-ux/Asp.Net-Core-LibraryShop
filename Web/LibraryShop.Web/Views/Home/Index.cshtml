@model LibraryShop.Web.ViewModels.Home.IndexPageStatisticsViewModel

@using LibraryShop.Common
@{
    this.ViewData["Title"] = "Home Page";
}
@if (this.TempData.ContainsKey("Message"))
{
    <div class="alert alert-success">@this.TempData["Message"]</div>
}

@if (this.TempData.ContainsKey("DeleteMessage"))
{
    <div class="alert alert-success">@this.TempData["DeleteMessage"]</div>
}
@if (this.TempData.ContainsKey("AddedGener"))
{
    <div class="alert alert-success">@this.TempData["AddedGener"]</div>
}


<div class="text-center">
    <h1 class="display-4">Welcome to @GlobalConstants.SystemName!</h1>
    <p>We have:</p>
</div>


<div class="offset-1 container">
    <div class="col-md-8"></div>
    <table class="text-center table table-dark">
        <thead>
            <tr>
                <th scope="col" class="text-primary">Users</th>
                <th scope="col" class="text-primary">Dealer</th>
                <th scope="col" class="text-primary">Books</th>
                <th scope="col" class="text-primary">Book Geners</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="text-warning">@Model.TotalUsers</td>
                <td class="text-warning">@Model.TotalDealers</td>
                <td class="text-warning">@Model.TotalBooks</td>
                <td class="text-warning">@Model.TotalBookGeners</td>
            </tr>
        </tbody>
    </table>
</div>


<div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="offset-4 d-block w-50 " src="@Model.BooksImages[0]">
        </div>
        <div class="carousel-item">
            <img class="offset-4 d-block w-50" src="@Model.BooksImages[1]">
        </div>
        <div class="carousel-item">
            <img class="offset-4 d-block w-50" src="@Model.BooksImages[2]">
        </div>
        @*<div class="carousel-item">
                <img class="offset-4 d-block w-50" src="@Model.BooksImages[3]">
            </div>*@
    </div>
</div>